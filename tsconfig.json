{
    "compilerOptions": {
        "rootDirs": ["src"],
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "skipLibCheck": true,
        "typeRoots": ["node_modules/@types"],
        "esModuleInterop": true
    },
    "include": ["src/**/*"]
}